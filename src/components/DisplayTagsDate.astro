---
export interface Props {
  tags: string[];
  pubDate: string;
}

import { getLangFromUrl } from '@i18n/utils';

const { tags, pubDate } = Astro.props;

const lang = getLangFromUrl(Astro.url);

const months = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];
const d = new Date(pubDate);
const year = d.getFullYear();
const month = months[d.getMonth()];
const day = d.getDate();
---

<section class="flex items-center justify-between">
  <div>
    {
      tags?.map((t) => (
        <a href={`/${lang}/tags/${t}`} class="tag text-gradient mr-1" title={`Tag: ${t}`}>
          {t}
        </a>
      ))
    }
  </div>
  <div>
    <span class="text-gray-300 dark:text-gray-300 mr-2">|</span>
    <time datetime={ pubDate } class="text-gray-500 dark:text-gray-300">
      { month } { day }, { year }
    </time>
  </div>
</section>

<style>
.tag {
  font-weight: 800;
  text-transform: capitalize;
}
.tag:hover, .tag:focus {
  text-decoration: underline;
  text-decoration-color: var(--primary);
}
</style>
