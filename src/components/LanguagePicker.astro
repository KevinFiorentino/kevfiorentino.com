---
import { languages } from '@i18n/ui';

const currentUrl = Astro.url.pathname;
const currentLang = currentUrl.split('/')[1];
const urlWithoutLang = currentUrl.slice(4);   // Remove /{lang}/
---

<div id="language-picker" class="bg-gray-200 dark:bg-gray-500">
  <ul>
    {Object.entries(languages).map(([lang, label]) => (
      <li class={`lang-pointer ${currentLang == lang ? 'active' : ''}`}>
        <a href={`/${lang}/${urlWithoutLang}`} class={`grid justify-center items-center capitalize`} title={`Change language to ${label}`}>
          {lang}
        </a>
      </li>
    ))}
  </ul>
</div>


<style>
#language-picker {
  position: fixed;
  top: calc(50% - 100px);
  right: 5px;
  box-shadow: 0px 3px 6px #00000029;
  z-index: 2;
  clip-path: polygon(0% 5%, 100% 0, 100% 0%, 100% 100%, 0 95%);
}
#language-picker li a {
  font-size: 20px;
  width: 50px;
  height: 50px;
  padding-bottom: 3px;
}
.lang-pointer:hover, .lang-pointer:focus {
  text-decoration: underline;
}
.active {
  color: white;
  background-color: var(--accent);
  text-decoration: none !important;
}
@media (max-width: 600px) {
  #language-picker li a {
    font-size: 16px;
    width: 36px;
    height: 36px;
  }
}
</style>
