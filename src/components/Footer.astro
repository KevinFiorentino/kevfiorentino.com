<style lang="scss">
footer {
  .sign {
    line-height: 25px;

    span {
      font-size: 0.65rem;
    }
  }
  .footer-icon:hover {
    svg path {
      fill: var(--alternative);
    }
  }
}
footer::before {
  content: "";
  position: absolute;
  background: var(--accent);
  width: 100%;
  height: 180px;
  left: 0;
  overflow: hidden;
  backface-visibility: visible;
  clip-path: polygon(0 25%, 75% 0, 100% 25%, 100% 100%, 0 100%);
  top: -50px;
}
// footer::before dark mode estiled on global.scss
</style>
