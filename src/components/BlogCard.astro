---
export interface Props {
	title: string;
	body: string;
	href: string;
  description: string;
}

const { href, title, body, description } = Astro.props;
---

<article class="blog-card-background hover:shadow-xl">
  <a href={ href } title={ title } class="flex transition">
    <div class="rotate-180 p-2 [writing-mode:_vertical-lr]">
      <time datetime="2022-10-10" class="flex items-center justify-between text-white text-xs font-bold uppercase gap-4">
        <span>2022</span>
        <span class="w-px flex-1"></span>
        <span>Oct 10</span>
      </time>
    </div>

    <div class="hidden sm:block sm:basis-56">
      <img class="aspect-square h-full w-full object-cover"
        src="https://images.unsplash.com/photo-1609557927087-f9cf8e88de18?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80"
        alt="Guitar"
      />
    </div>

    <div class="flex flex-1 flex-col justify-between">
      <div class="border-l border-gray-900/10 p-4 dark:border-white/10 sm:!border-l-transparent sm:p-6">
        <h3 class="font-bold uppercase text-white">
          { title }
        </h3>
        <p class="mt-2 text-sm leading-relaxed text-white line-clamp-3">
          { description }
        </p>
      </div>

      <div class="sm:flex sm:items-end sm:justify-end">
        <button class="block px-5 py-3 text-center text-xs font-bold uppercase text-white transition">
          Read Article
        </button>
      </div>
    </div>
  </a>
</article>

<style>
.blog-card-background {
  background: var(--meddle-background);
}
.block {
  background-color: var(--accent);
}
</style>
