<style is:global lang="scss">
.dark {
  .media-icon {
    path {
      fill: var(--white);
    }
  }
}
</style>

<style lang="scss">
.hero {
  height: 92vh;
  align-items: center;
}
.kev-image {
  max-height: 280px;
  clip-path: polygon(15% 10%, 100% 0, 100% 25%, 100% 100%, 0 85%);
}
@media (max-width: 1024px) {
  .hero {
    height: auto;
  }
}
h1 {
  font-weight: 900;
}
.presentation {
  p {
    font-size: 15px;
  }
}
</style>
