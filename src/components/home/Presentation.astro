---
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="hero main-width grid grid-cols-1 gap-5 lg:grid-cols-3 lg:gap-8">
  <div class="lg:col-span-2">
    <h1 class="text-gradient mt-0">
      {t('home.kev')}
    </h1>
    <div class="presentation">
      <p class="mb-2">
        {t('home.presentation1')}
      </p>
      <p class="mb-2">
        {t('home.presentation2')}
      </p>
      <p class="mb-2">
        {t('home.presentation3')}
      </p>
      <p class="mb-2">
        {t('home.presentation4')}
      </p>
    </div>
  </div>
  <div class="order-first md:order-last">

    <div class="polygon-shadow">
      <img src="/kevin.webp" class="kev-image m-auto" alt="Kevin Fiorentino" />
    </div>

    <div class="flex justify-center items-center my-4">
