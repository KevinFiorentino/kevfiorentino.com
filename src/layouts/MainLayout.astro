---
export interface Props {
	title: string;
  description: string;
  image: string;
}

import { getLangFromUrl } from '@i18n/utils';
import Head from '@components/Head.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import LanguagePicker from '@components/LanguagePicker.astro';

import '@styles/global.scss';

const { title, description } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html id="kevin" class="dark" lang={lang}>
	<Head
    title={title}
    description={description}
    image=''
  ></Head>
	<body class="bg-gray-100 dark:bg-gray-800">
    <Header></Header>
    <LanguagePicker></LanguagePicker>
    <main>
      <slot />
    </main>
    <Footer></Footer>
	</body>
</html>

<style is:global>
:root {
  --primary: #2596be;
  --accent: #6d474a;
  --alternative: #378d99;
  --meddle-background: linear-gradient(45deg, var(--primary), var(--accent) 30%, var(--primary) 60%);
}
html {
  font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
    'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
  background-color: #F6F6F6;
}
body {
  min-height: 100vh;
}
code {
  font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
    Bitstream Vera Sans Mono, Courier New, monospace;
}
main {
  margin: auto;
  padding: 1.5rem;
  max-width: 150ch;
}
</style>
