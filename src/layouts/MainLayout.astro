---
export interface Props {
	title: string;
  description: string;
  image: string;
  addWidth: boolean;
}

import { getLangFromUrl } from '@i18n/utils';
import Head from '@components/Head.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import LanguagePicker from '@components/LanguagePicker.astro';

import '@styles/global.scss';

const { title, description, image, addWidth } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html id="kevin" class="dark" lang={lang}>
	<Head
    title={title}
    description={description}
    image={image}
  ></Head>
	<body class="bg-gray-100 dark:bg-gray-800">
    <Header></Header>
    <br>
    <LanguagePicker></LanguagePicker>
    <main class={`${addWidth ? 'main-width' : ''}`}>
      <slot />
    </main>
    <br><br><br>
    <Footer></Footer>
	</body>
</html>

<style is:global>
:root {
  --white: #FAFAFA;
  --black: #1D1D1D;
  --primary: #2596BE;
  --accent: #2A72B2;
  --alternative: #E1C546;
  --bg-gradient: linear-gradient(0deg, var(--primary) 0%, var(--accent) 100%);
  --shadow: #00000029;
}
html {
  font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
    'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
  background-color: #F6F6F6;
}
body {
  min-height: 100vh;
}
code {
  font-size: .9rem;
  font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
    Bitstream Vera Sans Mono, Courier New, monospace;
}
.bg-gradient {
  background-image: var(--bg-gradient);
}
.bg-primary-blue {
  background-color: var(--primary);
}
.bg-accent-blue {
  background-color: var(--accent);
}
.fill-primary {
  fill: var(--primary);
}
.fill-alternative {
  fill: var(--alternative);
}
</style>
